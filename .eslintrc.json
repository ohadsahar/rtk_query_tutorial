{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["standard", "plugin:cypress/recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "semi": [2, "always"],
    "quotes": [2, "single", "avoid-escape"],
    "prettier/prettier": ["error"],
    "no-duplicate-imports": ["error"]
  }
}
